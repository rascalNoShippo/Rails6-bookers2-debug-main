<div class="container w-50">
  <h2>New event</h2>
  <%= form_with url: group_events_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control book_title' %>
    </div>
    <div class="form-group">
      <%= f.label :detail %>
      <%= f.text_area :detail, class: 'form-control book_body' %>
    </div>
    <div class="form-group">
      <%= f.submit "Notice this event", name: nil, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>