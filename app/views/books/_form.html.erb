
<%= form_with model:book,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "mb-0" %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :body , "Opinion", class: "mb-0" %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label "Tag(s) (space separating)", class: "mb-0" %>
    <%= f.text_field :tag_name, value: book.tags.pluck(:name), class: 'form-control book_title' %>
  </div>
  <div class="evaluation mb-3">
    <%= f.label :evaluation, class: "mb-0" %>
    <%= f.hidden_field :evaluation %>
    <div id="evaluation"></div>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% if book.evaluation.nil? %>
    <script>
      $('#evaluation').empty();
      $('#evaluation').raty({
        size: 8,
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        //starHalf: "<%#= asset_path('star-half.png') %>",
        scoreName: 'book[evaluation]' //登録するモデル名とカラム名を記述
      });
    </script>
  <% else %>
    <%= render "evaluation", book: book %>
  <% end %>
<% end %>

