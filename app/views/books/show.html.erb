<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <section class="book_detail">
    		<h2>Book detail</h2>
    		<table class='table'>
    		  <tr>
            <td ><%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, @book %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited?(current_user) %>
                <%= link_to "♥ #{@book.favorites.count}いいね", book_favorites_path(@book), method: :delete %>
              <% else %>
                <%= link_to "♡ #{@book.favorites.count}いいね", book_favorites_path(@book), method: :post %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              <% end %>
            </td>
          </tr>
        </table>
      </section>
      <section class="comments">
        <div class="new_comment">
          <h2>Post new comment</h2>
          <%= form_with model: [@book, @comment] do |f| %>
            <%= f.label :comment_body, "Comment" %>
            <%= f.text_area :comment_body %>
            <%= f.submit "Post Comment" %>
          <% end %>
        </div>
        <div class="comments_list">
          <h2>Comments</h2>
          <table class="table">
            <tbody>
              <% @book.comments.each do |comment| %>
                <tr>
                  <td>
                    <div class="comment_header row">
                      <div class="commenter_profile col-5">
                        <%= image_tag @users.find(comment.commenter_id).profile_image, size: "50x50" %>
                        <%= @users.find(comment.commenter_id).name %>
                      </div>
                      <div class="comment_del_btn col-1">
                        <% if comment.commenter_id == current_user.id %>
                          <%= link_to "Delete", book_comment_path(comment.book_id, comment.id), method: :delete, class: "btn btn-danger", "data-confirm" => "コメントを削除しますか？" %>
                        <% end %>
                      </div>
                      <div class="posted_datetime col-3 offset-3">
                        <%= comment.created_at %>
                      </div>
                    </div>
                    <div class="comment_body row">
                      <div class="col-12">
                        <%= comment.comment_body %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</div>