<table class='table table-hover table-inverse table-striped'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td class="align-middle col-1">
          <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td class="align-middle col-2"><%= link_to book.title,book %></td>
        <td class="align-middle col-3"><%= book.body %></td>
        <td class="align-middle col-3">
            <div id=<%= "fav-book-#{book.id}" %>>
              <%= render 'favorites/fav', book: book %>
            </div>
            <p class="m-0"><%= book.comments.count %> コメント</p>
            <p class="m-0">閲覧者数：<%= book.visitors.count %></p>
        </td>
        <td class="align-middle col-3">
          <%= render "books/evaluation", book: book %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>