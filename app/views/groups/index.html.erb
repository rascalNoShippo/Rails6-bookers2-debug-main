<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Groups</h2>
      <table class="table">
        <thead></thead>
        <tbody>
          <% @groups.each do |item| %>
            <tr>
              <td><%= link_to item.name, group_path(item.id), class: "d-block" %></td>
              <td><%= link_to User.find(item.owner_id).name, user_path(item.owner_id), class: "d-block" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
