<div class="container w-50">
  <div class="d-flex justify-content-between mb-3">
    <h2 class="d-flex mb-0">Edit group</h2>
    <%= link_to "Remove", group_path,method: :delete, class: "d-flex btn btn-danger align-items-center px-3 ml-3", "data-confirm" => "グループを削除しますか？" %>
  </div>
    <%= form_with model: @group, local:true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control book_title' %>
    </div>
    <div class="form-group">
      <%= f.label :introduction , "Opinion" %>
      <%= f.text_area :introduction, class: 'form-control book_body' %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>