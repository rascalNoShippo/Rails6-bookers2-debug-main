<% if book.favorited?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fas fa-heart mr-3"></i><%= pluralize(book.favorites.count, "fav") %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    <i class="far fa-heart mr-3"></i><%= pluralize(book.favorites.count, "fav") %>
  <% end %>
<% end %>
